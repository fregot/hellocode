#include<stdio.h>//pqscal's triangle(Yanghui san jiao)
int main()
{
  int n;
  printf("Enter a n:");
  scanf("%d",&n);
  int a[n][n];

  for(int i=0;i<n;i++)
    {
      a[i][0]=1;
      a[i][i]=1;
    }
  for(int i=2;i<n;i++)
    {
      for(int j=1;j<i;j++)
	{
	  a[i][j]=a[i-1][j-1]+a[i-1][j];
	}
    }
  for(int i=0;i<n;i++)
    {
      for(int k=0;k<n-1-i;k++)
	{
	  printf(" ");
	}
      for(int j=0;j<=i;j++)
	{
	  printf("%d ",a[i][j]);
	}
      printf("\n");
    }
  return 0;
}
